#include <WiFi.h>
#include <esp_now.h>
#include <Keypad.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
#define OLED_RESET -1  
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

const byte ROWS = 4;
const byte COLS = 3;
char keys[ROWS][COLS] = {
  {'1', '2', '3'},
  {'4', '5', '6'},
  {'7', '8', '9'},
  {'A', '0', 'B'}
};
byte rowPins[ROWS] = {23, 19, 18, 5}; 
byte colPins[COLS] = {17, 16, 4}; 
Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

typedef struct struct_message {
    char tasta;
} struct_message;
struct_message mesajTrimis;
struct_message mesajPrimit;

uint8_t mac_peer[] = {0x24, 0x6F, 0x28, 0xA1, 0xB2, 0xC3};   // Adresa MAC a celuilalt ESP32

// ðŸ”¹ FuncÈ›ie pentru a desena un cerc
void desenCerc() {
    display.fillCircle(64, 32, 20, SSD1306_WHITE);  // Cerc de centru (64, 32) È™i razÄƒ 20
}

// ðŸ”¹ FuncÈ›ie pentru a desena un pÄƒtrat
void desenPatrat() {
    display.fillRect(32, 16, 64, 32, SSD1306_WHITE);  // PÄƒtrat cu coordonatele x=32, y=16, lÄƒÈ›ime=64, Ã®nÄƒlÈ›ime=32
}

// ðŸ”¹ FuncÈ›ie pentru a desena o linie
void desenLinie() {
    display.drawLine(10, 10, 118, 54, SSD1306_WHITE);  // Linie de la coordonatele (10, 10) la (118, 54)
}

void OnDataRecv(const uint8_t *mac, const uint8_t *incomingData, int len) {
    memcpy(&mesajPrimit, incomingData, sizeof(mesajPrimit));
    Serial.print("TastÄƒ primitÄƒ: ");
    Serial.println(mesajPrimit.tasta);

    // ðŸ“Œ AfiÈ™are pe OLED
    display.clearDisplay();
    display.setCursor(20, 30);
    display.setTextSize(2);
    display.setTextColor(SSD1306_WHITE);
    display.print("RX: ");
    display.print(mesajPrimit.tasta);
    display.display();
}

void OnDataSent(const uint8_t *mac_addr, esp_now_send_status_t status) {
    Serial.print("Trimitere: ");
    Serial.println(status == ESP_NOW_SEND_SUCCESS ? "SUCCES" : "EÈ˜EC");
}

void setup() {
    Serial.begin(115200);
    WiFi.mode(WIFI_STA);
    
    if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
        Serial.println("Eroare la iniÈ›ializarea OLED!");
        while (1);
    }
    display.clearDisplay();
    display.setTextSize(2);
    display.setTextColor(SSD1306_WHITE);
    display.setCursor(20, 20);
    display.print("ESP32");
    display.display();

    if (esp_now_init() != ESP_OK) {
        Serial.println("Eroare la iniÈ›ializarea ESP-NOW!");
        return;
    }
    
    esp_now_register_send_cb(OnDataSent);
    esp_now_register_recv_cb(OnDataRecv);

    esp_now_peer_info_t peerInfo;
    memcpy(peerInfo.peer_addr, mac_peer, 6);
    peerInfo.channel = 0;
    peerInfo.encrypt = false;
    
    if (esp_now_add_peer(&peerInfo) != ESP_OK) {
        Serial.println("Eroare la adÄƒugarea peer-ului!");
        return;
    }
}

void loop() {
    char key = keypad.getKey();
    
    if (key) {  
        Serial.print("TastÄƒ apÄƒsatÄƒ: ");
        Serial.println(key);
        
        mesajTrimis.tasta = key;
        esp_err_t rezultat = esp_now_send(mac_peer, (uint8_t *)&mesajTrimis, sizeof(mesajTrimis));

        if (rezultat != ESP_OK) {
            Serial.println("Eroare la trimitere!");
        }

        // ðŸ“Œ AfiÈ™are graficÄƒ pe OLED Ã®n funcÈ›ie de tasta apÄƒsatÄƒ
        display.clearDisplay();
        display.setCursor(20, 30);
        display.setTextSize(2);
        display.setTextColor(SSD1306_WHITE);
        display.print("TX: ");
        display.print(key);

        // ðŸ”¹ Switch pentru a desena elemente grafice diferite
        switch (key) {
            case '1':
                desenCerc();
                break;
            case '2':
                desenPatrat();
                break;
            case '3':
                desenLinie();
                break;
            case 'A':
                // AfiÈ™are alt grafic pentru 'A'
                display.fillTriangle(10, 50, 60, 50, 35, 10, SSD1306_WHITE);  // Triunghi
                break;
            case 'B':
                // AfiÈ™are alt grafic pentru 'B'
                display.fillRect(40, 40, 48, 16, SSD1306_WHITE);  // Dreptunghi
                break;
            default:
                break;
        }

        display.display();
    }
}
