#include <ESP8266WiFi.h>
#include <ESP8266HTTPClient.h>

const char* ssid = "Nume_Retea";
const char* password = "Parola_Retea";

const int buttonPin = D3;
const int ledPin = D2;
bool buttonState = false;

void setup() {
  pinMode(buttonPin, INPUT);
  pinMode(ledPin, OUTPUT);
  digitalWrite(ledPin, LOW);

  Serial.begin(115200);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting...");
  }

  Serial.println("Connected to WiFi");
}

void loop() {
  buttonState = digitalRead(buttonPin);

  if (buttonState == HIGH) {
    sendSignalToE1();
    delay(1000); // Debounce delay
  }

  // Listen for incoming requests
  WiFiClient client;
  HTTPServer(client);
}

void sendSignalToE1() {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin("http://IP_E1/led"); // Înlocuiți cu IP-ul dispozitivului E1
    http.addHeader("Content-Type", "application/x-www-form-urlencoded");
    int httpResponseCode = http.POST("state=1");
    http.end();
  }
}

void HTTPServer(WiFiClient client) {
  WiFiServer server(80);
  server.begin();

  client = server.available();
  if (client) {
    String request = client.readStringUntil('\r');
    client.flush();
    if (request.indexOf("/led_on") != -1) {
      digitalWrite(ledPin, HIGH);
    }
    if (request.indexOf("/led_off") != -1) {
      digitalWrite(ledPin, LOW);
    }
  }
}